<CustButton@Button>:
	font_size: 32

<AlarmGridLayout>:
	id: alarmpanel
	display: entry
	rows: 6
	padding: 10
	spacing: 10
    canvas.before:
        Rectangle:
            source: 'bg.jpg'
            pos: self.pos
            size: self.size

	BoxLayout:
		orientation: 'vertical'
		padding: 10
		BoxLayout:
			orientation: 'horizontal'
			TextInput:
				id: entry
				size_hint: (0.2, 1.0)
				font_size: 30
				password: True
				multiline: False
				background_color: (255, 255, 255, 0)
				foreground_color: (255, 255, 255, 1)
			Widget:
				id: separator
				size_hint_y: None
				size_hint_x: None
				height: 6
				canvas:
					Color:
						rgb: 128, 128, 128
					Rectangle:
						pos: entry.x + entry.width, 430
						size: 2, entry.height
			Label:
				size_hint: (0.4, 1.0)
				id: status
				font_size: 20
				text: "ARM & DISARM TO BEGIN"
			Label:
				size_hint: (0.4, 1.0)
				id: dtime
				font_size: 20
				text: "PLEASE WAIT..."
		ProgressBar:
			id: bar
			value: 0
			max: 60
	BoxLayout:
		spacing: 10
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("1")
			Image:
			    center: self.parent.center
			    source: '1.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("2")
			Image:
			    center: self.parent.center
			    source: '2.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("3")
			Image:
			    center: self.parent.center
			    source: '3.png'
		CustButton:
			text: ""
			on_press: alarmpanel.checkCode(entry.text, "ARM_AWAY")
			Image:
			    center: self.parent.center
			    source: 'arm-away.png'

	BoxLayout:
		spacing: 10
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("4")
			Image:
			    center: self.parent.center
			    source: '4.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("5")
			Image:
			    center: self.parent.center
			    source: '5.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("6")
			Image:
			    center: self.parent.center
			    source: '6.png'
		CustButton:
			text: ""
			on_press: alarmpanel.checkCode(entry.text, "ARM_HOME")
			Image:
			    center: self.parent.center
			    source: 'arm-home.png'

	BoxLayout:
		spacing: 10
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("7")
			Image:
			    center: self.parent.center
			    source: '7.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("8")
			Image:
			    center: self.parent.center
			    source: '8.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("9")
			Image:
			    center: self.parent.center
			    source: '9.png'
		CustButton:
			text: ""
			on_press: alarmpanel.checkCode(entry.text, "SCREENSAVER")
			Image:
			    center: self.parent.center
			    source: 'cctv.png'

	BoxLayout:
		spacing: 10
		CustButton:
			text: ""
			on_press: alarmpanel.checkCode(entry.text, "SETTINGS")
			Image:
			    center: self.parent.center
			    source: 'settings.png'
		CustButton:
			text: ""
			on_press: alarmpanel.processBtn("0")
			Image:
			    center: self.parent.center
			    source: '0.png'
		CustButton:
			text: ""
			on_press: entry.text = ""
			Image:
			    center: self.parent.center
			    source: 'close.png'
		CustButton:
			text: ""
			on_press: alarmpanel.checkCode(entry.text, "DISARM")
			Image:
			    center: self.parent.center
			    source: 'disarm.png'
      
<MenuPopup>:
    id: MPopup
    title: "Settings"
    size_hint: 1, 1
    auto_dismiss: False
    GridLayout:
        cols: 2
        Label:
        Label:
        Label:
            text: "MQTT Host"
        TextInput:
            id: mqtt_host
            text: "127.0.0.1"
            font_size: 12
        Label:
            text: "MQTT Port"
        TextInput:
            id: mqtt_port
            text: "1883"
            font_size: 12
        Label:
            text: "MQTT User"
        TextInput:
            id: mqtt_username
            text: ""
            font_size: 12
        Label:
            text: "MQTT Password"
        TextInput:
            id: mqtt_pass
            font_size: 12
            text: ""
            password: True
        Label:
            text: "HASS State Topic"
        TextInput:
            id: mqtt_state
            font_size: 12
            text: "home/alarm"
        Label:
            text: "HASS Command Topic"
        TextInput:
            id: mqtt_com
            font_size: 12
            text: "home/alarm/set"
        Label:
            text: "Buzzer GPIO Pin"
        TextInput:
            id: buzzer_pin
            font_size: 12
            text: "18"
        Label:
            text: "Screen Width"
        TextInput:
            id: screen_x
            text: "800"
            font_size: 12
        Label:
            text: "Screen Height"
        TextInput:
            id: screen_y
            text: "480"
            font_size: 12
        Label:
            text: "ARM / DISARM Code"
        TextInput:
            id: alarm_code
            password: False
            text: "1230"
            font_size: 12  
        Label:
        Label:
        Button:
            id: left_button
            text: "Apply"
            on_press: MPopup.checkLeftBtn(self.text)
        Button:
            id: right_button
            text: "Close"
            on_press: root.dismiss()
            
<RestartPopup>:
    id: RPopup
    title: "Settings Changed"
    size_hint: .7, .5
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Settings will not take effect until restart. Would you like to restart now?"
        BoxLayout:
            Button:
                text: "Yes"
                on_press: RPopup.doRestart()
            Button:
                text: "No"
                on_press: root.dismiss()
                    